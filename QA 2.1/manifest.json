{
    "manifest_version": 3,
    "name": "QA Assist",
    "version": "2.7",
    "description": "A tool to enhance QA workflows with automation and logging.",
    "author": "Abel Orta",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "activeTab",
        "notifications",
        "alarms"
    ],
    "host_permissions": [
        "*://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "event-log-db.js",
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "options_page": "settings.html"
}
